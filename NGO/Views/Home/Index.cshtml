@{
    ViewBag.Title = "Home Page";
}

<!-- banner section -->
<section id="home" class="banner">
    <div id="banner-bg-effect" class="banner-effect"></div>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7 col-md-12 col-sm-12 order-lg-first mt-lg-0 mt-4">
                <h1 class="mb-4 title">
                    The more <strong>you help orthers</strong>, the more <strong>they</strong> will want to <strong>help you.</strong>
                </h1>
            </div>
            <div class="col-lg-5 col-md-12 col-sm-12 order-first text-lg-left text-center">
                <div>
                    <img src="@Url.Content("~/content/")assets/images/bg-2.jpg" alt="" class="rounded-circle img-fluid">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- //banner section -->
<!-- home page service grids -->
<section id="services" class="bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 offset-lg-2 col-md-12 col-sm-12">
                <h4 class="section-title">About Us</h4>
            </div>
        </div>
        <div class="row mt-lg-5">
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="box-wrap">
                    <div class="icon">
                        <span class="fa fa-dollar"></span>
                    </div>
                    <h4><a href="@Url.Action("Donate")">Donate</a></h4>
                    <p>We organize several fundraisers for people from different backgrounds.</p>
                </div>

            </div>
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="box-wrap">
                    <div class="icon">
                        <span class="fa fa-industry"></span>
                    </div>
                    <h4><a href="@Url.Action("Donate")">Programs</a></h4>
                    <p>Events and programs we organize to help the lives of people in need.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="box-wrap">
                    <div class="icon">
                        <span class="fa fa-lightbulb-o"></span>
                    </div>
                    <h4><a href="@Url.Action("Partner")">Partner</a></h4>
                    <p> The NGO was established with the help of many companies contributions.</p>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- //home page service grids -->
<!-- stats section -->
<section id="stats" class="stats">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 margin-md-60">
                <h2 class="left-title">Thanks Everyone!</h2>
                <p class="white">
                    Thank you for your interest and trust in our organization. The money you have sent us will be given to those in need.
                </p>
                <a href="@Url.Action("Donate")" class="btn btn-primary btn-style">Donate Now</a>
            </div>
            <div class="col-lg-7 mt-lg-0 mt-5">
                <div class="d-sm-flex justify-content-lg-around justify-content-between counter-main">
                    <div class="counter">
                        <div class="icon">
                            <span class="fa fa-dollar"></span>
                        </div>
                        <p class="value">@ViewBag.donate</p>
                        <p class="title white">Fundraising money</p>
                    </div>
                    <div class="counter">
                        <div class="icon">
                            <span class="fa fa-user-circle"></span>
                        </div>
                        <p class="value">@ViewBag.user</p>
                        <p class="title white">Participants</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- //stats section -->
