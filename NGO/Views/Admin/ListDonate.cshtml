                                <tr>
                                    <th>Donate Name</th>
                                    <th>Category Name</th>
                                    <th>Start Day</th>
                                    <th>End Day</th>
                                    <th>Hide</th>
                                    <th>Total Money</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in lsOn)
                                {
                                    <tr>
                                        <td>@item.DonateName</td>
                                        <td>@item.Category.CateName</td>
                                        <td>@item.StartDay.ToString("yyyy/MM/dd hh:mm:ss")</td>
