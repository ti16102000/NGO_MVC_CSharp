        </div>
    </div>


</div>

@section scripts{

    <script>
        $(function () {
            $('#tableUpcoming').DataTable();
            $('#tableOngoing').DataTable();
            $('#tableEnded').DataTable();
            $('#tableHide').DataTable();
            $('.nav>li>a').click(function () {
                $('.tab-pane').hide();
                var id = $(this).attr("href");
                $(id).show();
            });
            var msg1 = '@TempData["success"]'
            if (msg1 != '') {
                alertify.success(msg1); //display notify
            }
            var msg2='@TempData["error"]'
            if (msg2 != '') {
                alertify.error(msg2);
            }
        });


    </script>
}