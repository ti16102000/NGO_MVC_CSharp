@model List<NGO.Models.EntityModels.TypeProgram>
@{
    ViewBag.Title = "Program";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<a href="@Url.Action("ListProgram")" class="btn btn-sm btn-info" style="background-color:#4e73df;font-size:20px;float:right;">
   List Program <i class="fa fa-arrow-right"></i>
</a>
<section class="panel" style="margin-top:55px;">
    <header class="panel-heading">
        Create Program
    </header>
    <form action="@Url.Action("CreateProgram")" method="POST" enctype="multipart/form-data">
        <div class="panel-body">
            <div class="position-center">
                <div class="form-group">
                    <label for="">Program Name:</label>
                    <input type="text" class="form-control" name="ProName" maxlength="200" required>
                </div>
                <div class="form-group">
                    <label for="">Type Program:</label>
                    <select name="TypeID">
                        @foreach (var item in Model)
                        {
                            <option value="@item.ID">@item.TypeName</option>
                        }

                    </select>
                </div>
                <div class="form-group">
                    <label for="">Program Content:</label>
                    <textarea name="ProContent" id="Description"></textarea>
                    <script>CKEDITOR.replace("Description")</script>
                </div>
                <div class="form-group">
                    <label for="">Hide:</label>
                    <input type="checkbox" id="cbHide" style="width:20px;height:20px;" />
                    <input type="hidden" name="ProHide" id="cbHideValue" value="False" />
                </div>
                <button type="submit" name="submit" class="btn btn-info">Submit</button>
            </div>
        </div>
    </form>
</section>
@section scripts{

    <script>
        $(function () {
            var msg2='@TempData["error"]'
            if (msg2 != '') {
                alertify.error(msg2);
            }
            $("#cbHide").change(function () {
                $("#cbHide").is(":checked") ? $("#cbHideValue").val("True") : $("#cbHideValue").val("False");
            })
        });


    </script>
}
